{
  "compilerOptions": {
    "lib": [
      "ES2020"
    ],
    "target": "ES2019",
    "module": "CommonJS",
    "baseUrl": "./src",
    "outDir": "./dist",
    "declarationDir": "./dist",
    "declaration": true,
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strictBindCallApply": true,
    "moduleResolution": "Node",
    "useUnknownInCatchVariables": false,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": [
    "node_modules",
    "test"
  ]
}
